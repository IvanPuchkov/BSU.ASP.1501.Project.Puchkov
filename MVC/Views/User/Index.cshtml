@model IEnumerable<MVC.Models.UserViewModel>
@{
    ViewBag.Title = "Users";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("User Id")
        </th>
        <th>
            @Html.DisplayName("User Display name")
        </th>
        <th>
            @Html.DisplayName("User Email")
        </th>

        <th>
            @Html.DisplayName("Banned")
        </th>
        <th></th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Banned)
            </td>
            <td>
                
                    @if (user.Banned)
                    {
                        @Html.ActionLink("Unban", "Ban", new {id = user.Id, ban = false})
                    }
                    else
                    {
                        @Html.ActionLink("Ban", "Ban", new { id = user.Id, ban = true })
                    }
                

            </td>
        </tr>
    }

</table>

