@model MVC.Models.BidViewModel
@{
    ViewBag.Title = "Place bid";
}

<h4>Place new bid</h4>
@Html.DisplayName("Lot name:")
<br/>
@Html.DisplayFor(x => x.Lot.Name)
<br/>
@using (Html.BeginForm("Create", "Bid", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new {@class = "text-danger"})
    <div class="form-group">
        @Html.LabelFor(m => m.Amount, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Place bid" />
        </div>
    </div>
}